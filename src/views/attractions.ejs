<%- include('partials/header') %>

<main>
  <h1>Liste des attractions</h1>
  <% if (successMessage) { %>
    <div class="alert alert-success">
     Votre demande a bien été prise en compte
    </div>
  <% } %>
  <a class="btn-add" href="/admin/attractions/add">Ajouter une attraction</a>
  <table>
    <tr>
    <th>ID</th>
    <th>Nom</th>
    <th>Image</th>
    <th>Modifier</th>
    <th>Supprimer</th>
  </tr>
      <% attractions.forEach(attraction => { %>
        <tr>
          <td><%= attraction.id %></td>
          <td><%= attraction.name %></td>
          <td><img class="img-attraction" src="<%= attraction.image %>" alt="<%= attraction.name %>"></td>
          <td><a href="/admin/attractions/<%= attraction.id %>">Modifier</a></td>
          <td>
            <form action="/admin/attractions/del/<%= attraction.id %>" method="POST">
              <button type="submit">Supprimer</button>
            </form>
          </td>
        </tr>
      <% }) %>
  </table>
</main>
<%- include('partials/footer') %>