<%- include('partials/header') %>

<main>
  <h1>Liste des utilisateurs</h1>
  <% if (successMessage) { %>
    <div class="alert alert-success">
     Votre demande a bien été prise en compte
    </div>
  <% } %>
  <a class="btn-add" href="/admin/users/add">Ajouter un utilisateur</a>
  <table>
    <tr>
      <th>ID</th>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Email</th>
      <th>Modifier</th>
      <th>Supprimer</th>
    </tr>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
          <td><a href="/admin/users/<%= user.id %>">Modifier</a></td>
          <td>
            <form action="/admin/users/del/<%= user.id %>" method="POST">
              <button type="submit">Supprimer</button>
            </form>  
        </tr>
        <% }) %>
  </table>
</main>


<%- include('partials/footer') %>